        <script>
            function validateForm() {
                var name = document.getElementById("name").value;
                var moduleCode = document.getElementById("moduleCode").value;

                if (name == null || name.trim() == "") {
                    document.getElementById("nameError").innerHTML = "Name must be filled out.";
                    return false;
                } else {
                    document.getElementById("nameError").innerHTML = "";
                }

                if (/^([a-z]|[A-Z]|[0-9]|[\s]){1,}$/.test(name) == false) {
                    document.getElementById("nameError").innerHTML = "Cannot contain any special characters.";
                    return false;
                } else {
                    document.getElementById("nameError").innerHTML = "";
                }
                if (moduleCode.trim() !== "") {
                    if (/^[A-Z][a-z][2-9]{3}$/.test(moduleCode) == false) {
                        document.getElementById("moduleCodeError").innerHTML = "Invalid module code."; // Module code should be one upper case, one lower case + 3 mumbers
                        return false;
                    } else {
                        document.getElementById("moduleCodeError").innerHTML = "";
                    }
                } else {
                    document.getElementById("moduleCodeError").innerHTML = "";
                }
                return true;
            }

            const today = new Date();
            const monthNames = ["January","February","March", "April","May", "June", "July", "August", "September", "October", "November", "December"];
            const month = monthNames[today.getMonth()]; //January
            const dayNames = ["Mon", "Tue","Wed","Thu","Fri","Sat","Sun"];
            const day = dayNames[today.getDay() - 1]; //Mon

            const date = today.getDate(); //22
            const year = today.getFullYear(); //2023
            const min = today.getMinutes().toString().padStart(2,'0'); //E.g 02:04 instead of 2: 4
            const sec = today.getSeconds();
            let hour = today.getHours().toString().padStart(2,'0');//E.g 02:34 instead of 2:34
            let amOrPM = "AM"
            if(hour > 12){
                hour = hour - 12;
                amOrPM = "PM";
            }

            var fullDate = month + " " + date + ", " + year + " " + day + " " + hour+ ":" + min + " " + amOrPM;
            document.getElementById("current-date").value = fullDate;

            // Exclude message in reset function

            function customReset() {
                replaceInput.value;
                findInput.value;
                Name.value;
                ID.value;
            }


            // for Message, find and replace --> 4.2

            const button = document.getElementById("find-and-replace");

            // Get the "Find" and "Replace" input boxes
            const findInput = document.getElementById("find");
            const replaceInput = document.getElementById("replace");

            // Disable the "Replace" input box if the "Find" input box is empty
            findInput.addEventListener("input", function() {
                replaceInput.disabled = findInput.value === "";
            });

            function inputValidation() {
                var text = document.getElementById("message").value;
                var findWord = document.getElementById("find").value;
                var replaceWord = document.getElementById("replace").value;
                if (findWord !== "" && text.trim() !== "") {
                    var allFindWord = new RegExp(findWord, "g");
                    var counter = 0;
                    document.getElementById("message").value = text.replace(allFindWord, function(x){counter+=1;return replaceWord});
                    if (counter !== 0) {
                        document.getElementById("replacements-message").innerHTML = "Number of replacements: " + counter;
                    } 
                    else {
                        document.getElementById("replacements-message").innerHTML = "";
                    }
                } else {
                    document.getElementById("replacements-message").innerHTML = "";
                }
            }
      </script>
